<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/guidedChordExerciseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="11dp"
            android:text="Exercise Name"
            android:textColor="@color/primaryText"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/guidedChordExerciseName"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:text="Chords:  "
            android:textColor="@color/secondaryText"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/guidedChordExerciseChords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guidedChordExerciseName"
            android:layout_toEndOf="@+id/textView5"
            android:textColor="@color/secondaryText"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/guidedChordExerciseChords"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/guidedChordExerciseName"
            android:visibility="invisible"
            app:srcCompat="@drawable/lock" />

    </RelativeLayout>

</android.support.v7.widget.CardView>