<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="horizontal"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="114dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            >
        </ImageView>

        <TextView
            android:id="@+id/item_text"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/primaryText"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/item_image"
            android:layout_marginStart="10dp">
        </TextView>

        <TextView
            android:id="@+id/item_text_secondary"
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/secondaryText"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/item_image"
            android:layout_below="@+id/item_text"
            android:layout_marginStart="10dp"
            >
        </TextView>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_preview"
            android:id="@+id/prePractice"
            android:background="#00000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>


        <!--<ProgressBar-->
        <!--style="@android:style/Widget.Material.Light.ProgressBar.Small"-->
        <!--android:layout_width="48dp"-->
        <!--android:layout_height="48dp"-->
        <!--android:id="@+id/chordPreviewProgressBar"-->
        <!--android:layout_alignBottom="@+id/prePractice"-->
        <!--android:layout_alignStart="@+id/prePractice"-->
        <!--android:visibility="invisible"/>-->
    </RelativeLayout>



</android.support.v7.widget.CardView>